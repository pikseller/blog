<div class="post-genis ortala">
  <img src="">
  <h1>
      <%= truncate(@post.title, length: 60) %>
  </h1>
  <p class="content">
    <%= @post.content %>
  </p>
  <p class="content">
    <% if @post.categories.present? %>
      <% @post.categories.each do |category| %>
        <%= link_to category.name, category_path(category) %>
      <% end %>
    <% else %>
      Bu yazının kategorisi bulunmamaktadır.
    <% end %>
  </p>

  <br>
  <br>
  <p class="rate">
  <%= form_for(@rate) do |f| %>
    <div  class="ui star rating" data-max-rating="5"> </div>
    <%= f.hidden_field :post_id, value: @post.id %><br>
    <%= f.hidden_field :rate,class:"rate_hidden_field" %><br>
  <% end %>
  <script>
    $('.ui.rating').rating();
    $(".ui.rating .icon").click(function(){
    setTimeout(function (){
      var x = $('.ui.rating').rating('get rating');
      $(".rate_hidden_field").attr("value",x);
      $("#new_rate").submit();
    }, 200);
     

      
    });
  </script>
  
  <%= @post.rates.average(:rate) %><br>

    <% @comments.each do |comment| %>
      <b><%= (comment.name).capitalize %></b> 
      <% if (@now.strftime("%Y").to_i-comment.created_at.strftime("%Y").to_i) == 0%>
      xd
  <% else %>
  <%=(@now.strftime("%Y").to_i-comment.created_at.strftime("%Y").to_i)%> yıl oldu
  <% end %>
  <% if (@now.strftime("%m").to_i-comment.created_at.strftime("%m").to_i) == 0%>
      
  <% else %>
  <%=(@now.strftime("%m").to_i-comment.created_at.strftime("%m").to_i)%> ay oldu
  <% end %>
  <% if (@now.strftime("%d").to_i-comment.created_at.strftime("%d").to_i) == 0%>
    
  <% else %>
  <%= (@now.strftime("%d").to_i-comment.created_at.strftime("%d").to_i)%> gün oldu
  <% end %>
      <p><%= comment.content %><br></p>

   
   
    
  <% end %>
  <br>
 
  
  
    <p class="content">
      <%= form_for @comment do |f| %>
          <div class="ui form">
            <div class="fields">
              <div class="field"> Ad Soyad: <%= f.text_field :name %><br></div>
              <div class="field"> E-posta:  <%= f.text_field :email %><br></div>
            </div>
              <div class="field">Mesajınız: <%= f.text_field :content %><br></div>
          </div>
            <%= f.hidden_field :post_id, value: @post.id %><br>
            <%= f.submit 'Yorum Yap',class: 'button' %><br>
      <% end %>
    </p>
</div>
