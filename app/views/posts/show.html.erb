<div class="post-genis ortala">
  <img src="">
  <h1>
      <%= truncate(@post.title, length: 60) %>
  </h1>
  <p class="content">
    <%= @post.content %>
  </p>
  <p class="content">
    <% if @post.categories.present? %>
      <% @post.categories.each do |category| %>
        <%= link_to category.name, category_path(category) %>
      <% end %>
    <% else %>
      Bu yazının kategorisi bulunmamaktadır.
    <% end %>
  </p>

</div>

