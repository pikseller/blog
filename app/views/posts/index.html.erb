
<% @posts.each do |post| %>
  <%= link_to post_path(post), class: 'post' do %>

    <div class="kartIcerik">
      <div class="govdeIcerik">
        <div class="gorselIcerik">
          <%if post.image.attached?%>
            <%=image_tag post.image, style:"width:100%; height:350px; object-fit:cover; border-top-left-radius: 20px; border-top-right-radius: 20px;"%>
          <%else%>
            Fotoğraf Bulunamadı.
          <%end%>
        </div>
          <div class="baslikIcerik">
            <p class="baslikIcerikAlt"><%= truncate(post.title, length: 40)%></p>
          </div>
        <div class="footerIcerik">
          <div class="profilIcerik">
            <%= image_tag 'pp.webp', style:"max-width: 50px; margin-top: 10px; border-radius: 100px" %>
          </div>
          <div class="profilAdiIcerik">
            <h2 style="color: #6d37da"> | Kullanıcı Test</h2>
          </div>
        </div>
      </div>
    </div>

  <% end %>
<% end %>

