
<% @posts.each do |post| %>
  <%= link_to post_path(post), class: 'post' do %>
    <div>
      <%if post.image.attached?%>
        <%=image_tag post.image, style:"width:100%; height:350px; object-fit:cover "%>
      <%else%>
        foto yok
      <%end%>
    </div>
      <h1>
      
      <span class="darkmode-ignore">  <%= truncate(post.title, length: 20)%> </span>
        
      </h1>

    
  <% end %>
<% end %>
<div class="social">
  <%= link_to "http://www.facebook.com/" do %>
      <%= image_tag 'facebook.png' %>
  <% end %> 
  <%= link_to "http://www.twitter.com/" do %>
      <%= image_tag 'twitter.png' %>
  <% end %>
   <%= link_to "https://www.instagram.com" do %>
      <%= image_tag 'instagram.png' %>
  <% end %>
  <%= link_to "https://www.linkedin.com/" do %>
      <%= image_tag 'linkedin.png' %>
  <% end %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>
  <script>
    function addDarkmodeWidget() {
      new Darkmode().showWidget();
    }
    window.addEventListener('load', addDarkmodeWidget);
  </script>
  

           